{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Nekoshare",
  "version": "0.1.0",
  "identifier": "com.thiratt.nekoshare",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:7787",
    "beforeDevCommand": "pnpm dev:w",
    "beforeBuildCommand": "pnpm build:w"
  },
  "mainBinaryName": "Nekoshare",
  "app": {
    "windows": [
      {
        "title": "Nekoshare Desktop",
        "label": "main",
        "minWidth": 1200,
        "minHeight": 700,
        "center": true,
        "decorations": false,
        "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/143.0.0.0 Safari/537.36 Edg/143.0.0.0 NekoshareDesktop/0.1.0"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "fragmentPaths": ["assets/wix/firewall-exceptions.wxs"],
        "componentRefs": ["FirewallExceptions"]
      }
    }
  }
}
