{
	"compilerOptions": {
		"target": "es2024",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "./dist"
	},
	"exclude": ["node_modules"]
}
