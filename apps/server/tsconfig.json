{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true
	},
	"exclude": ["node_modules", "dist"]
}
