{
	"compilerOptions": {
		"target": "es2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"verbatimModuleSyntax": false,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules"]
}
